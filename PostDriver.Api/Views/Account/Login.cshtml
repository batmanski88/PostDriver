@model LoginViewModel


<section id="Login">
    <div class="row" ng-controller="loginController">
        <h4>Logowanie u≈ºytkownika</h4>
        <form method="post" class="form-horizontal" name="loginForm" ng-submit="login()">
            <div class="form-group">
                <label asp-for="Email" class="col-md-2"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control" ng-model="model.Email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-md-2"></label>
                <div class="col-md-8">
                    <input asp-for="Password" class="form-control" ng-model="model.Password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn-primary">Zaloguj</button>
        </form>
        <pre>token = {{jwt | json}}</pre>
    </div>
</section>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        var app = angular.module('postDriver', []);

        app.controller('loginController', ['$scope', '$http', function($scope, $http){
                
            $scope.model = {};
            $http.jwt = {};

            $scope.login = function() {
                $http({
                    method: 'post',
                    url: 'Login',
                    data: $scope.model
                }).then(function(success){
                    alert('Success: ' + success);
                }, function(error){
                    alert('Error: ' + error);
                });
            }
        
        }]);

    </script>
}